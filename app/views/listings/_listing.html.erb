<article class="flex flex-col w-72 my-3 mx-2 rounded-md shadow-uniform">
  <%= link_to listing, class: "hover:underline hover:bg-yellow-500 rouned-t-md" do %>
    <header class="flex flex-wrap justify-between">
      <h1 class="text-xl p-2"><%= listing.title %></h1>
      <div class="w-full h-48 bg-blue-200 relative z-0">
        <% if listing.photo.attached? %>
          <%= image_tag listing.photo, class: "object-contain h-full w-full" %>
        <% end %>
        <div class="text-xl py-1 pl-4 pr-2 rounded-l-full bg-blue-500 text-white absolute bottom-3 -right-1 text-right shadow-uniform z-30">AU$<%= listing.price.to_f/100 %></div>
      </div>
    </header>
    <% end %>
  <main class="p-2">
    <p class="h-20 text-lg"><%= listing.description %></p>
  </main>
  <footer class>
  </footer>
</article>