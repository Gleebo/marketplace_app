<div class="w-full h-screen flex flex-col justify-center items-center">
  <div class="border border-solid shadow-uniform rounded-lg w-72">
    <h2 class="text-xl text-white bg-yellow-500 p-3 rounded-t-lg">Log in</h2>
    <%= form_for(resource, html: {class: "px-5 py-7 space-y-3 flex flex-col h-96"}, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
      </div>

      <div>
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "label" %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: "bg-yellow-500 px-2 rounded-md text-xl text-white py-2" %>

    <% end %>
  </div>
</div>